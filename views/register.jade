extends layout

block content
    div.container
        div.row
            div.col-sm-6.col-md-4.col-md-offset-4
                .form-top
                    .form-top-left
                    h3 Sign Up
                    .form-top-right
                        i.fa.fa-lock
                .form-bottom
                    form.login-form(role="form", action="/signup", method="post")
                      .form-group
                        label.sr-only(for="username") Username
                        input#username.form-username.form-control(type="text", name="username", placeholder="Username")
                      .form-group
                        label.sr-only(for="useremail") Email
                        input#userpassword.form-password.form-control(type="password", name="password", placeholder="Password")
                      button.btn(type="submit") Sign up
